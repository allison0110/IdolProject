<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="celebDAO">

	<select id="repList" resultType="celebDTO">
	<!-- 그룹명 기준 제일적은 숫자의 코드를 가진 대표 레코드 뽑아내기(중복없는 가수리스트 뽑을 때 사용)  -->
		select * 
			from celeb 
			where celeb_no in (select min(celeb_no) from celeb group by celeb_group) 
			order by celeb_group
	</select>

</mapper>    
