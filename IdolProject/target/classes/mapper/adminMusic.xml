<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

    
    <mapper namespace="musicDAO">
    
    	<!-- 음원 등록 -->
    	<insert id="musicInsert" parameterType="musicDTO">
    		insert into music values(#{music_aname}, #{music_name}, #{music_lyrics}, 
    			#{music_composer}, #{music_lyricst}, #{music_coverimage}, 
    				#{music_movie_link}, #{music_release_date} ) 
    	</insert>
    	
    	<!-- 음원 리스트 order by 앨범 명-->
    	<select id="musicList" resultType="musicDTO">
    		select * from music order by music_aname
    	</select>
    	
    	<!-- 음원 상세 내용  -->
 	   	<select id="musicCont" parameterType="String" resultType="musicDTO">
    		select * from music where music_name = #{name}
    	</select>
    	
    	<!-- 음원 삭제 -->
    	<delete id="deleteMusic" parameterType="String">
    		delete from music where music_name = #{music_name} 
    	</delete>
    	
    	<!-- 음원 정보 수정 -->
    	<update id="musicUpdate" parameterType="musicDTO">
    		update music set music_aname = #{music_aname}, music_name = #{music_name}, music_lyrics = #{music_lyrics},
    			music_composer = #{music_composer}, music_lyricst = #{music_lyricst}, music_coverimage = #{music_coverimage},
    				music_movie_link = #{music_movie_link}, music_release_date = #{music_release_date} where music_name = #{music_name} 
    	</update>
    	
    	
    </mapper>